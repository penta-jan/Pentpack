\newcommand{\pbogen}[2]{
    \draw[#2,>=\meinpfeil,line width=\pfeildicke,cap=round] ({72*(#1-1)+\rota}:\kvar)  arc ({72*(#1-1)+\rota}:{72*(#1)+\rota}:\kvar)
